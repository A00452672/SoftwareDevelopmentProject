@model SoftwareDevelopmentProject.Models.Sport

@{
    ViewBag.Title = "AddASportView";
}

<div class="row">
    <div class="card text-dark bg-light mb-3">
        <div class="card-body">
            <h1 class="fas card-title">Add New Sport</h1>
        </div>
    </div>
    <div class="col-md-2">
        @Html.Partial("UserMenuAdmin")
    </div>
    <div class="col-lg-offset-1 col-md-8">
        <div class="row">
            

            @using (Html.BeginForm("AddASportView", "User", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                    
                    <div class="form-group">
                        @Html.LabelFor(model => model.sport_name, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.sport_name, new { htmlAttributes = new { @class = "form-control", placeholder="Sport Name" } })
                            @Html.ValidationMessageFor(model => model.sport_name, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.sport_description, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.sport_description, new { htmlAttributes = new { @class = "form-control", placeholder = "Description" } })
                            @Html.ValidationMessageFor(model => model.sport_description, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.sport_rate, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            @Html.EditorFor(model => model.sport_rate, new
                            {
                                htmlAttributes = new
                                {
                                    @class = "form-control",
                           onkeyup = "this.value=this.value.replace(/[^\\d]/,'')",
                           onkeydown = "this.value=this.value.replace(/[^\\d]/,'')"
                       }
                            })
                            @Html.ValidationMessageFor(model => model.sport_rate, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.currency_id, htmlAttributes: new { @class = "control-label col-md-4" })
                        <div class="col-md-8">
                            <select class="form-control" id="currency_id" name="currency_id">
                                @foreach (var item in ViewBag.currencies)
                                {
                                    <option value=@item.Key>@item.Value</option>
                                }
                            </select>

                        </div>

                    </div>


                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <input type="submit" value="Create" class="btn btn-primary" />
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-4 col-md-8">
                            <label class="label-danger">@ViewBag.duplicateMessage</label>
                            <label class="label-success">@ViewBag.SuccessMessage</label>
                        </div>
                    </div>

                </div>
            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
        </div>
    </div>
</div>